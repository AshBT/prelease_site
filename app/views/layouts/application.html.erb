      <div class="container">
        <div class="content">
           <div class="row">
            <div class="span12">
              <%= render 'layouts/headerwrap' %>
              <%= render 'layouts/messages' %>
              <%= yield %>
              <%= render 'layouts/lowerwrap' %>
            </div>
          </div>
